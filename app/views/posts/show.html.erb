<h1><%= @post.title %></h1>

<p><%= @post.body %></p>

<ul>
  <li>
    <%= link_to "Edit post", edit_post_path(@post) %>
  </li>
  <li>
    <%= link_to "Delete", post_path(@post), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?"
    } %>
  </li>
  <li> <%= link_to "Home", root_path %></li>
</ul>
