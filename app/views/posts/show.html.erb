<div>
  <div style="text-align: center; border: #730E15 solid 9px">
    <h1><%= @post.title %></h1>
    <hr>
    <p><%= @post.body %></p>
  </div>
  <div>
    <ul>
      <li> <%= link_to "Home", root_path %></li>
      <li>
        <%= link_to "Edit post", edit_post_path(@post) %>
      </li>
      <li>
        <%= link_to "Delete", post_path(@post), data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %>
      </li>
    </ul>
  </div>

  <div style="margin: 5px">
    <h5>
    We have:
    <%= comment_helper %>
    comments
  </h5>
    <h3 style="background-color: burlywood; width: fit-content">Comments:</h3>
      <%= render @post.comments %>
  </div>


  <h4> Add new comment:</h4>
  <div style="border: #2E2F30 2px solid; width: fit-content; padding: 5px; background-color: beige">
  <%= render 'comments/form', post: @post %>
  </div>


</div>



