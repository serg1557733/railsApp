<h1>Create new user</h1>
<p>Find me in app/views/users/new.html.erb</p>


<div style="border: #730E15 solid 2px; width: fit-content">
  <%= form_with model: @user do |form|%>
  <p><%= form.label :name, "Your name" %>
    <%= form.text_field :name%></p>
    <p><%= form.label :nickname, "Your nick" %>
    <%= form.text_field :nickname%></p>
    <p><%= form.label :email, "Your email" %><%= form.text_field :email%></p>
  <button type="submit"> Register </button>
  <% end %>
</div>
